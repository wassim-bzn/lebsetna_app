<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".ui.activities.MotDePasseOublie">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1235dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView15"
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="206dp"
            android:layout_height="106dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Mot de passe oubliÃ©"

            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="414dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView16"
                style="@style/Widget.AppCompat.TextView.SpinnerItem"
                android:layout_width="111dp"
                android:layout_height="42dp"
                android:backgroundTint="#0E0505"
                android:gravity="center"
                android:text="Email * :"
                android:textColor="#0E0808"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/edt_Email_MP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_email"
                android:ems="10"
                android:hint="@string/hint_email"
                android:inputType="textEmailAddress" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="353dp"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_Envoyer"
                style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#3E4550"
                android:text="Envoyer"
                android:textColor="#070505"
                android:textSize="16sp"
                android:textStyle="bold"
                app:iconTint="#8A8181"
                app:rippleColor="#44434C" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>