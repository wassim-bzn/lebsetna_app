<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="30dp"
    android:elevation="5dp"
    tools:context=".ui.activities.RegistrationActivity">


    <RelativeLayout
            android:layout_width="381dp"
            android:layout_height="691dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_shadow"
            android:orientation="vertical">

        <TextView
                android:id="@+id/textView2"
                android:layout_width="144dp"
                android:layout_height="95dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="10dp"
                android:elevation="20sp"
                android:fontFamily="@font/lemon"
                android:text="Registration"
                android:textColor="@color/orange"
                android:textSize="40sp" />

        <LinearLayout
                android:layout_width="322dp"
                android:layout_height="524dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="21dp"
                android:alpha="1"
                android:elevation="30dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="20dp"

                >

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="41dp"
                        android:text="Nom * :"
                        android:textSize="16sp"
                        android:textStyle="bold|italic">

                </TextView>

                <EditText
                        android:id="@+id/edt_Name"
                        android:layout_width="wrap_content"
                        android:layout_height="41dp"
                        android:ems="10"
                        android:hint="Nom"
                        android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="41dp"
                        android:text="Prénom* :"
                        android:textStyle="bold|italic" />

                <EditText
                        android:id="@+id/edt_Prenom"
                        android:layout_width="wrap_content"
                        android:layout_height="41dp"
                        android:ems="10"
                        android:hint="Prénom"
                        android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="234dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="41dp"
                        android:text="Ville* : "
                        android:textSize="16sp"
                        android:textStyle="bold|italic" />

                <Spinner
                        android:id="@+id/ville_spinner_list"
                        android:layout_width="154dp"
                        android:layout_height="41dp" />

            </LinearLayout>


            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="41dp"
                        android:text="N°Telephone* :"
                        android:textSize="16sp"
                        android:textStyle="bold|italic" />

                <EditText
                        android:id="@+id/editTextNumber"
                        android:layout_width="50dp"
                        android:layout_height="41dp"
                        android:editable="false"
                        android:ems="10"
                        android:enabled="true"
                        android:freezesText="true"
                        android:inputType="number"
                        android:text="+216"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                <EditText
                        android:id="@+id/edt_Tele"
                        android:layout_width="wrap_content"
                        android:layout_height="41dp"
                        android:ems="10"
                        android:inputType="phone"
                        android:textSize="16sp" />
            </LinearLayout>


            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/textView11"
                        android:layout_width="141dp"
                        android:layout_height="38dp"
                        android:text="Email * :"
                        android:textSize="16sp"
                        android:textStyle="bold|italic" />

                <EditText
                        android:id="@+id/Edt_Email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:drawableLeft="@drawable/ic_baseline_email"
                        android:ems="10"
                        android:hint="E-mail"
                        android:inputType="textEmailAddress" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/textView12"
                        android:layout_width="166dp"
                        android:layout_height="wrap_content"
                        android:text="Type d'utilisation * :"
                        android:textStyle="bold|italic" />

            </LinearLayout>


            <LinearLayout
                    android:layout_width="261dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                <RadioGroup
                        android:id="@+id/radio_groupe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <RadioButton
                            android:id="@+id/radio_professionnel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="professionnel"
                            android:onClick="onRadioButtonClicked" />

                    <RadioButton
                            android:id="@+id/radio_client"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Client"
                            android:onClick="onRadioButtonClicked" />
                </RadioGroup>
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_gravity="left"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="Password :"
                        android:textSize="18sp" />

                <EditText
                        android:id="@+id/edt_Password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="*********"
                        android:inputType="textPassword" />
            </LinearLayout>

            <TextView
                    android:id="@+id/textView13"
                    android:layout_width="188dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="*  : Champs obligatoire"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

            <Button
                    android:id="@+id/Btn_Inscription"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:foregroundTint="#7E7777"
                    android:text="S'inscrire"
                    android:onClick="register_user"
                    android:textColor="#090606" />

            <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Si vous avez déja un compte:"
                    android:textSize="15sp" />

            <TextView
                    android:id="@+id/textView_SeConnecter"
                    android:layout_width="99dp"
                    android:layout_height="41dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:gravity="center"
                    android:hint="activity_main"
                    android:linksClickable="true"
                    android:singleLine="true"
                    android:text="Se connecter"
                    android:textColorLink="#E80B0B"
                    android:onClick="back_to_login"
                    android:textSize="15sp" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>